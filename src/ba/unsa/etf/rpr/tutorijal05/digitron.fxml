<?xml version="1.0" encoding="UTF-8"?>

        <?import java.net.URL?>
        <?import javafx.geometry.Insets?>
        <?import javafx.scene.control.Button?>
        <?import javafx.scene.control.Label?>
        <?import javafx.scene.layout.ColumnConstraints?>
        <?import javafx.scene.layout.GridPane?>
        <?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" onKeyPressed="#keyboardPress" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.tutorijal05.Controller">

<stylesheets>
    <URL value="@digitron.css" />
</stylesheets>
<columnConstraints>
    <ColumnConstraints />
</columnConstraints>
<rowConstraints>
    <RowConstraints />
</rowConstraints>
<children>
    <GridPane alignment="CENTER" hgap="10.0" prefHeight="275.0" prefWidth="200.0" vgap="10.0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="40.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="40.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="40.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="40.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
        </rowConstraints>
        <children>
            <Label fx:id="display" maxHeight="Infinity" maxWidth="Infinity" styleClass="label" text="${controller.displayText}" GridPane.columnSpan="4" />
            <Button fx:id="percentageBtn" alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#percentageClick" styleClass="label2" text="\%" GridPane.rowIndex="1" />
            <Button fx:id="divideBtn" alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#divideClick" styleClass="label2" text="/" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="multiplyBtn" alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#multiplyClick" styleClass="label2" text="Ã—" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <Button fx:id="minusBtn" alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#substractClick" styleClass="label2" text="-" GridPane.columnIndex="3" GridPane.rowIndex="1" />
            <Button fx:id="btn7" alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#inputSeven" styleClass="label2" text="7" GridPane.rowIndex="2" />
            <Button fx:id="btn8" alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#inputEight" styleClass="label2" text="8" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Button fx:id="btn9" alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#inputNine" styleClass="label2" text="9" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <Button fx:id="plusBtn" alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#addClick" styleClass="label2" text="+" GridPane.columnIndex="3" GridPane.rowIndex="2" GridPane.rowSpan="2" />
            <Button fx:id="btn4" alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#inputFour" styleClass="label2" text="4" GridPane.rowIndex="3" />
            <Button fx:id="btn5" alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#inputFive" styleClass="label2" text="5" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Button fx:id="btn6" alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#inputSix" styleClass="label2" text="6" GridPane.columnIndex="2" GridPane.rowIndex="3" />
            <Button fx:id="btn1" alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#inputOne" styleClass="label2" text="1" GridPane.rowIndex="4" />
            <Button fx:id="btn2" alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#inputTwo" styleClass="label2" text="2" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Button fx:id="btn3" alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#inputThree" styleClass="label2" text="3" GridPane.columnIndex="2" GridPane.rowIndex="4" />
            <Button fx:id="btn0" alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#inputZero" styleClass="label2" text="0" GridPane.columnSpan="2" GridPane.rowIndex="5" />
            <Button fx:id="dotBtn" alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#decimalSeparatorClick" styleClass="label2" text="." GridPane.columnIndex="2" GridPane.rowIndex="5" />
            <Button fx:id="equalsBtn" alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#equalClick" styleClass="label2" text="=" GridPane.columnIndex="3" GridPane.rowIndex="4" GridPane.rowSpan="2" />
        </children>
        <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </GridPane.margin>
    </GridPane>

</children>
</GridPane>

